# Database
DATABASE_URL=postgresql://user:password@host:5432/roof_er_command_center

# Session & Auth
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# Google Cloud / GenAI
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_GENAI_API_KEY=your-google-genai-api-key

# Email
SENDGRID_API_KEY=your-sendgrid-api-key
RESEND_API_KEY=your-resend-api-key

# OpenAI (optional - for Lite Training)
OPENAI_API_KEY=your-openai-api-key

# Groq (optional - for advanced features)
GROQ_API_KEY=your-groq-api-key

# Anthropic (optional - for AI features)
ANTHROPIC_API_KEY=your-anthropic-api-key

# App Config
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:5173

# Cloud Storage (optional - defaults to local storage if not set)
# Get your token from: https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Feature Flags
ENABLE_HR_MODULE=true
ENABLE_LEADERBOARD_MODULE=true
ENABLE_TRAINING_MODULE=true
ENABLE_FIELD_MODULE=true
